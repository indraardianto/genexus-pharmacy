<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.artech.pharmacy.pharmacymenu"
    android:installLocation="auto">


    <!-- used for CameraAPI or attributes/variables multimedia in android:maxSdkVersion="23" , used for PhotoLibrary API in all apis  -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application android:name=".MainApplication"
                 android:hardwareAccelerated="true"
                 android:resizeableActivity="false"
                 android:allowBackup="false"
                 android:supportsRtl="true"
                 android:theme="@style/ApplicationTheme"
                 android:icon="@drawable/appicon"
                 android:networkSecurityConfig="@xml/network_security_config"
                 android:label="@string/app_name">

     <uses-library android:name="org.apache.http.legacy" android:required="false"/>

        <activity android:name="com.artech.activities.StartupActivity" android:label="@string/app_name" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Provider -->
        <provider android:name="com.artech.pharmacy.pharmacymenu.AppEntityDataProvider" android:exported="false" android:authorities="com.artech.pharmacy.pharmacymenu.appentityprovider" />

        <!-- Service -->
        <service android:enabled="true" android:name="com.artech.pharmacy.pharmacymenu.AppEntityService" />

  </application>
</manifest>
